<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" colors="auto" addUncoveredFilesFromWhitelist="true">
    <testsuites>
        <testsuite name="PHP: Nelson Martell Library Tests Suite">
            <file>tests/ObjectTest.php</file>
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <groups>
        <exclude>
            <group>PHP examples</group>
            <group>Features to be implemented</group>
            <group>Proposals</group>
        </exclude>
    </groups>

    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
            <file>vendor/cakephp/utility/Text.php</file>
            <file>config/bootstrap.php</file>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-clover" target="build/phpunit/coverage/clover.xml"/>
        <log type="coverage-html" target="build/phpunit/coverage" lowUpperBound="25" highLowerBound="75"/>
        <!-- <log type="coverage-php" target="build/phpunit/coverage/serialized.php"/> -->
        <!-- <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/> -->
        <!-- <log type="testdox-html" target="build/phpunit/testdox/index.html"/> -->
        <log type="testdox-text" target="build/phpunit/testdox.txt"/>
    </logging>
</phpunit>
